<div class='mt-4'>
    <div class='row'>
        <div class='col-lg-3'>
            <button type='submit' class='btn btn-primary'>Học ngay</button>
        </div>
        {{#with course}}
            <div class='col-lg-9'>
                <h2>{{name}}</h2>
                <iframe
                    width='560'
                    height='315'
                    src='https://www.youtube.com/embed/{{videoId}}'
                    title='YouTube video player'
                    frameborder='0'
                    allow='accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture'
                    allowfullscreen
                ></iframe>
                <p>{{description}}</p>
                <h4>Trình độ: {{Level}}</h4>
            </div>
        {{/with}}
    </div>
</div>